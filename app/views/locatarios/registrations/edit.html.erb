<%# app/views/locatarios/registrations/edit.html.erb %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <%# --- Card 1: Editar Perfil --- %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="card shadow-sm border-0 mb-4">
          <div class="card-header bg-primary text-white fw-bold">
            <h2>Editar Minha Conta</h2>
          </div>
          <div class="card-body bg-light p-4">
            
            <%# Mostra erros de validação (se houver) %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning">Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, "Nova Senha", class: "form-label fw-semibold" %>
              <small class="form-text text-muted">(deixe em branco se não quiser mudar)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= @minimum_password_length %> caracteres no mínimo</small>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirme a Nova Senha", class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm" %>
            </div>

            <hr class="my-4">

            <div class="mb-3">
              <%= f.label :current_password, "Senha Atual", class: "form-label fw-semibold" %>
              <small class="form-text text-muted">(obrigatória para salvar alterações)</small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control shadow-sm", required: true %>
            </div>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <%= link_to "← Voltar", :back, class: "btn btn-outline-secondary" %>
            <%= f.submit "Salvar Alterações", class: "btn btn-primary px-4 shadow-sm" %>
          </div>
        </div>
      <% end %>

      <%# --- Card 2: Zona de Perigo (Cancelar Conta) --- %>
      <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
          <h3>Zona de Perigo</h3>
        </div>
        <div class="card-body d-flex justify-content-between align-items-center">
          <p class="mb-0 text-danger">Não está satisfeito? Cancele sua conta permanentemente.</p>
          <%= button_to "Cancelar minha conta", registration_path(resource_name), 
                data: { confirm: "Tem certeza que deseja cancelar sua conta? Esta ação é irreversível.", 
                        turbo_confirm: "Tem certeza que deseja cancelar sua conta? Esta ação é irreversível." }, 
                method: :delete, 
                class: "btn btn-danger shadow-sm" %>
        </div>
      </div>

    </div>
  </div>
</div>