<%= form_with(model: [:admin, carro], class: "needs-validation") do |form| %>
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-primary text-white fw-bold">
      <%= carro.new_record? ? "Novo Carro" : "Editar Carro" %>
    </div>

    <div class="card-body bg-light">
      <% if carro.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(carro.errors.count, "erro") %> impediram o salvamento:</h5>
          <ul class="mb-0">
            <% carro.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :nome, class: "form-label fw-semibold" %>
          <%= form.text_field :nome, class: "form-control shadow-sm", required: true %>
        </div>

        <div class="col-md-6">
          <%= form.label :marca, class: "form-label fw-semibold" %>
          <%= form.text_field :marca, class: "form-control shadow-sm", required: true %>
        </div>
        
        <div class="col-md-4">
          <%= form.label :placa, class: "form-label fw-semibold" %>
          <%= form.text_field :placa, class: "form-control shadow-sm", required: true %>
        </div>

        <div class="col-md-4">
          <%= form.label :cor, class: "form-label fw-semibold" %>
          <%= form.text_field :cor, class: "form-control shadow-sm" %>
        </div>
        
        <div class="col-md-4">
          <%= form.label :ano, class: "form-label fw-semibold" %>
          <%= form.select :ano, options_for_select((Date.today.year - 50..Date.today.year + 1).to_a.reverse, carro.ano), { prompt: 'Selecione o ano' }, { class: "form-select shadow-sm", required: true } %>
        </div>

        <div class="col-md-4">
          <%= form.label :combustivel, class: "form-label fw-semibold" %>
          <%= form.select :combustivel,
                %w[gasolina alcool flex diesel],
                { prompt: 'Selecione o combustÃ­vel' },
                { class: "form-select shadow-sm", required: true } %>
        </div>

        <div class="col-md-4">
          <%= form.label :cambio, class: "form-label fw-semibold" %>
          <%= form.select :cambio,
                %w[manual automatico],
                { prompt: 'Selecione o cÃ¢mbio' },
                { class: "form-select shadow-sm", required: true } %>
        </div>

        <div class="col-md-4">
          <%= form.label :valor_diaria, class: "form-label fw-semibold" %>
          <div class="input-group">
            <span class="input-group-text bg-white fw-bold">R$</span>
            <%= form.number_field :valor_diaria, class: "form-control shadow-sm", step: 0.01, required: true %>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between">
      <%= link_to "â† Voltar", admin_carros_path, class: "btn btn-outline-secondary" %>
      <%= form.submit "ðŸ’¾ Salvar Carro", class: "btn btn-primary px-4" %>
    </div>
  </div>
<% end %>
