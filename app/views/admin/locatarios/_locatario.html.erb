  <div class="card h-100 border-0 shadow-sm">
    <div class="card-body">
      <h5 class="card-title fw-bold"><%= locatario.nome %></h5>
      <p class="card-text text-muted">
        <strong>Email:</strong> <%= locatario.email %><br>
        <strong>CPF:</strong> <%= locatario.cpf %><br>
        <strong>Admin:</strong> <%= locatario.admin? ? "Sim" : "NÃ£o" %>
      </p>
    </div>
    <div class="card-footer bg-transparent border-top d-flex justify-content-center gap-2">
      <%= link_to "Editar", edit_admin_locatario_path(locatario), class: "btn btn-warning btn-sm text-white" %>
      <%= link_to "Excluir", admin_locatario_path(locatario),
                  data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
