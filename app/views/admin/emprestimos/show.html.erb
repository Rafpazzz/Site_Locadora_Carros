<h1>Detalhes do Empréstimo #<%= @emprestimo.id %></h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <h5 class="card-title">Resumo</h5>
    
    <p><strong>Locatário:</strong> <%= @emprestimo.locatario.try(:nome) || "Locatário não encontrado" %></p>
    <p><strong>Carro:</strong> <%= @emprestimo.carro.try(:marca) %> <%= @emprestimo.carro.try(:nome) || "Carro não encontrado" %></p>
    <p><strong>Status:</strong> <span class="badge bg-primary fs-6"><%= @emprestimo.status %></span></p>
  </div>
  
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Data de Início:</strong> <%= l @emprestimo.data_inicio, format: :short %></li>
    <li class="list-group-item"><strong>Data de Fim:</strong> <%= l @emprestimo.data_fim, format: :short %></li>
    <li class="list-group-item"><strong>Valor Total:</strong> <%= number_to_currency(@emprestimo.valor_total) %></li>
  </ul>
</div>

<hr>

<div class="d-flex gap-2">
  <%= link_to "Editar Empréstimo", edit_admin_emprestimo_path(@emprestimo), class: "btn btn-secondary" %>
  
  <%= link_to "Voltar aos Empréstimos", admin_emprestimos_path, class: "btn btn-outline-secondary" %>
  
  <%= button_to "Excluir Empréstimo", [:admin, @emprestimo], method: :delete, data: { turbo_confirm: "Tem certeza?" }, class: "btn btn-danger" %>
</div>