<%# app/views/admin/emprestimos/index.html.erb %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="fw-bold text-primary">Gerenciar Empr√©stimos</h1>
  <%= link_to "Novo Empr√©stimo", new_admin_emprestimo_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm mb-4 border-0">
  <div class="card-body">
    <%= form_with url: admin_emprestimos_path, method: :get, local: true, class: "row g-3 align-items-end" do %>
      
      <div class="col-md-10">
        <%= label_tag :query, "Buscar Emprestimo", class: "form-label fw-semibold" %>
        <%= text_field_tag :query, params[:query], placeholder: "Digite a placa ou CPF ou email", class: "form-control shadow-sm" %>
      </div>

      <div class="col-md-2 d-grid">
        <%= submit_tag "Buscar", class: "btn btn-outline-primary fw-semibold shadow-sm" %>
      </div>

      <% if params[:query].present? %>
        <div class="col-12 d-flex justify-content-end">
          <%= link_to "Limpar busca", admin_emprestimos_path, class: "btn btn-link text-secondary text-decoration-none" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body p-0">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-dark">
        <tr>
          <th scope="col" class="ps-4">ID</th>
          <th scope="col">Status</th>
          <th scope="col">Locat√°rio (Email)</th>
          <th scope="col">Carro (Placa)</th>
          <th scope="col">Valor Total</th>
          <th scope="col" class="pe-4">A√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% if @emprestimos.any? %>
          <% @emprestimos.each do |emprestimo| %>
            <tr>
              <th scope="row" class="ps-4"><%= emprestimo.id %></th>
              <td>
                <% status_class = case emprestimo.status
                                  when "Pendente" then "bg-warning text-dark"
                                  when "Locado" then "bg-success"
                                  when "Devolvido" then "bg-secondary"
                                  else "bg-light text-dark"
                                  end %>
                <span class="badge <%= status_class %>"><%= emprestimo.status %></span>
              </td>
              <td><%= emprestimo.locatario.email %></td>
              <td><%= emprestimo.carro.placa %></td>
              <td><%= number_to_currency(emprestimo.valor_total) %></td>
              
              <%# --- ESTA √â A CORRE√á√ÉO --- %>
              <%# Adicionamos 'd-flex gap-1' ao <td> e o link_to "Ver" %>
              <td class="pe-4 d-flex gap-1">
                <%= link_to "Ver", [:admin, emprestimo], class: "btn btn-primary btn-sm" %>
                <%= link_to "Editar", edit_admin_emprestimo_path(emprestimo), class: "btn btn-warning btn-sm text-white" %>
                <%= link_to "Excluir", admin_emprestimo_path(emprestimo),
                            data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
                            class: "btn btn-danger btn-sm" %>
              </td>
              <%# --- FIM DA CORRE√á√ÉO --- %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="text-center text-muted p-5">
              <h5>Nenhum empr√©stimo encontrado üòï</h5>
              <p>Tente ajustar sua busca ou adicione um novo empr√©stimo.</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= paginate @emprestimos %>
</div>