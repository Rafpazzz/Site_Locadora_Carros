<%# app/views/emprestimos/index.html.erb %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">Meus Empréstimos</h1>
    <%= link_to "Alugar outro carro", carros_path, class: "btn btn-primary shadow-sm" %>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body p-0">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th scope="col" class="ps-4">Carro</th>
            <th scope="col">Placa</th>
            <th scope="col">Data de Início</th>
            <th scope="col">Data de Fim</th>
            <th scope="col">Valor Total</th>
            <th scope="col" class="pe-4">Status</th>
          </tr>
        </thead>
        <tbody>
          <% if @emprestimos.any? %>
            <% @emprestimos.each do |emprestimo| %>
              <tr>
                <td class="ps-4 fw-semibold"><%= emprestimo.carro.nome %></td>
                <td><%= emprestimo.carro.placa %></td>
                <td><%= l emprestimo.data_inicio, format: :short %></td>
                <td><%= l emprestimo.data_fim, format: :short %></td>
                <td><%= number_to_currency(emprestimo.valor_total) %></td>
                <td class="pe-4">
                  <%# Badge de Status com cor %>
                  <% status_class = case emprestimo.status
                                    when "Pendente" then "bg-warning text-dark"
                                    when "Locado" then "bg-success"
                                    when "Devolvido" then "bg-secondary"
                                    else "bg-light text-dark"
                                    end %>
                  <span class="badge <%= status_class %>"><%= emprestimo.status %></span>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="text-center text-muted p-5">
                <h5>Você ainda não possui empréstimos.</h5>
                <%= link_to "Ver carros disponíveis", carros_path, class: "btn btn-primary mt-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <%= paginate @emprestimos %>
  </div>
</div>