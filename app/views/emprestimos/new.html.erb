<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-7">

      <%= form_with(model: [@carro, @emprestimo], local: true) do |form| %>
        <div class="card shadow-sm border-0">
          
          <div class="card-header bg-primary text-white fw-bold">
            <h2>Solicitar Locação</h2>
          </div>
          
          <div class="card-body bg-light p-4">
            
            <% if @emprestimo.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@emprestimo.errors.count, "erro") %> impediram o salvamento:</h5>
                <ul class="mb-0">
                  <% @emprestimo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title text-dark fw-bold"><%= @carro.marca %> <%= @carro.nome %></h5>
                
                <p class="card-text mb-1">
                  <span class="d-block"><strong>Placa:</strong> <%= @carro.placa %></span>
                  <span class="d-block"><strong>Ano:</strong> <%= @carro.ano.year %></span>
                  <span class="d-block"><strong>Câmbio:</strong> <%= @carro.cambio.humanize %></span>
                  <span class="d-block"><strong>Combustível:</strong> <%= @carro.combustivel.humanize %></span>
                </p>
                
                <h4 class="text-success fw-bold mb-0"><%= number_to_currency(@carro.valor_diaria) %>/dia</h4>
              </div>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <%= form.label :data_inicio, class: "form-label fw-semibold" %>
                <%= form.date_field :data_inicio, class: "form-control shadow-sm", required: true %>
              </div>
              <div class="col-md-6">
                <%= form.label :data_fim, "Data Final", class: "form-label fw-semibold" %>
                <%= form.date_field :data_fim, class: "form-control shadow-sm", required: true %>
              </div>
            </div>
            
          </div>

          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <%= link_to "← Cancelar", carros_path, class: "btn btn-outline-secondary" %>
            <%= form.submit "Confirmar Solicitação", class: "btn btn-primary px-4 shadow-sm" %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>