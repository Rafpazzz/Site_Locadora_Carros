<%# app/views/carros/index.html.erb %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Nossos Carros para Locação</h1>
    
    <%# Link para o Painel de Admin (só deve aparecer se for admin) %>
    <%# if current_locatario&.admin? %>
    <%# link_to "Gerenciar Carros (Admin)", admin_carros_path, class: "btn btn-secondary" %>
    <%# end %>
  </div>
  
  <%# Verificamos SE o usuário está logado antes de mostrar o nome %>
  <% if locatario_signed_in? %>
    <p class="lead">Bem-vindo de volta, <strong><%= current_locatario.nome %></strong>! Escolha um carro para começar.</p>
  <% else %>
    <%# Se não estiver logado, mostramos uma mensagem pública %>
    <p class="lead">
      Veja nossos carros disponíveis. 
      <%= link_to "Faça login", new_locatario_session_path %> ou 
      <%= link_to "cadastre-se", new_locatario_registration_path %> 
      para alugar.
    </p>
  <% end %>
  
  <%# -- Grade de Carros (Bootstrap Cards) -- %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @carros.each do |carro| %>
      <div class="col">
        <div class="card h-100">
          <%# (Opcional) Adicione uma imagem aqui %>
          <%# <img src="..." class="card-img-top" alt="..."> %>
          
          <div class="card-body">
            <h5 class="card-title"><%= carro.marca %> <%= carro.nome %></h5>
            <p class="card-text">
              <strong>Cor:</strong> <%= carro.cor %><br>
              <strong>Ano:</strong> <%= carro.ano %><br>
              <strong>Placa:</strong> <%= carro.placa %>
            </p>
            <h4 class="text-success">R$ <%= carro.valor_diaria %>/dia</h4>
          </div>
          
          <div class="card-footer">
            <%# --- CORREÇÃO AQUI --- %>
            <%# Adicionamos a aspa de fechamento " e o %> no final da linha %>
            <%= link_to "Alugar este Carro", new_emprestimo_path(carro_id: carro.id), class: "btn btn-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# -- Links de Paginação do Kaminari -- %>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @carros %>
  </div>

</div>